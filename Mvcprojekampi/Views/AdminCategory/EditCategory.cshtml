@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<br />
<h2>Kategori Günceleme Sayfası</h2>
@using(Html.BeginForm("EditCategory","AdminCategory",FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Kategori ID")
    @Html.TextBoxFor(x => x.CategoryID, new { @class = "from-control" })
    <br />
    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "from-control" })
    <br />
    @Html.Label("Kategori Açıklaması")
    @Html.TextBoxFor(x => x.CategoryDescription, new { @class = "from-control" })
    <br />
<button class="=btn btn-success">Güncelle</button>
</div>
}
